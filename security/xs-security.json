{
  "xsappname": "employee-list",
  "tenant-mode": "shared",
  "scopes": [
    {
      "name": "$XSAPPNAME.read",
      "description": "Role to read data"
    },
    {
      "name":"$XSAPPNAME.TenantProvisioningCallback",
      "description":"Callback for tenant onboarding, offboarding, get dependencies",
      "grant-as-authority-to-apps":[
        "$XSAPPNAME(application,sap-provisioning,tenant-onboarding)"
      ]
    }
  ],
  "role-templates": [
    {
      "name": "viewer",
      "description": "Viewer Role",
      "scope-references": ["$XSAPPNAME.read"]
    }
  ],
  "role-collections": [
    {
      "name": "employeeReadRoleCollections",
      "description": "Employee Role Collection",
      "role-template-references": ["$XSAPPNAME.viewer"]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "http://*.localhost:4004/**",  
      "https://approuter-emp-list*.cfapps.us10-001.hana.ondemand.com/login/callback",
      "https://*.applicationstudio.cloud.sap/**"
    ]
  }
}
